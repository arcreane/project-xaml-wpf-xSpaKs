<Window x:Class="BudgestionWPF.Budgestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgestionWPF"
        mc:Ignorable="d"
        Title="Budgestion" Height="450" Width="800">
    <Grid>
        <Button x:Name="Start" Content="Créer un nouvel environnement familial de gestion de budget" Click="initializeBudgestion"/>
      
        <StackPanel>
            <Label x:Name="UsernameLabel" Content="Nom d'utilisateur :" Visibility="Collapsed" />
            <TextBox x:Name="UsernameInput" Visibility="Collapsed" />
            <Label x:Name="PasswordLabel" Content="Mot de passe :" Visibility="Collapsed" />
            <TextBox x:Name="PasswordInput" Visibility="Collapsed" />
            <Button x:Name="submit" Width="200" Height="40" Content="Créer mon profil" Visibility="Collapsed" Click="createFirstUser"/>
        </StackPanel>


        <Button x:Name="Budget" Width="200" Height="40" Content="Ajouter un budget à mon profil" Visibility="Collapsed" Click="budgetClick"/>
    </Grid>
</Window>
